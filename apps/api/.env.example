# =======================
# DATABASE CONFIGURATION
# =======================
DATABASE_URL="postgresql://username:password@localhost:5433/param_adventures?schema=public"

# =======================
# SERVER CONFIGURATION
# =======================
NODE_ENV="development"
PORT=3001
API_URL="http://localhost:3001"
FRONTEND_URL="http://localhost:3000"

# Allowed origins for CORS (comma-separated)
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# =======================
# JWT SECRETS
# =======================
# Generate secure random strings for production:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

JWT_ACCESS_SECRET="your-access-token-secret-minimum-32-characters-long"
JWT_REFRESH_SECRET="your-refresh-token-secret-minimum-32-characters-long"

# Token expiry times
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# =======================
# REDIS CONFIGURATION
# =======================
REDIS_URL="redis://localhost:6379"

# =======================
# CLOUDINARY (Media Storage)
# =======================
# Get from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# =======================
# RAZORPAY (Payment Gateway)
# =======================
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID="your-razorpay-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"
RAZORPAY_WEBHOOK_SECRET="your-razorpay-webhook-secret"

# =======================
# GOOGLE OAUTH (Optional)
# =======================
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3001/auth/google/callback"

# =======================
# EMAIL CONFIGURATION
# =======================
# Option 1: Use Resend (Recommended - Free tier: 100 emails/day)
# Get API key from: https://resend.com/api-keys
SMTP_HOST="smtp.resend.com"
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER="resend"
SMTP_PASS="re_your_api_key_here"
SMTP_FROM="noreply@yourdomain.com"

# Option 2: Use Brevo (formerly Sendinblue) (Free tier: 300 emails/day)
# Get SMTP credentials from: https://app.brevo.com/settings/keys/smtp
# SMTP_HOST="smtp-relay.brevo.com"
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER="your-brevo-login-email@example.com"
# SMTP_PASS="your-brevo-smtp-key"
# SMTP_FROM="noreply@yourdomain.com"

# Option 3: Gmail (For development only - requires app password)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"
# SMTP_FROM="your-email@gmail.com"

# If SMTP is not configured, the app will auto-generate Ethereal test credentials
# and log preview URLs to console (development only)

# =======================
# SENTRY (Error Monitoring)
# =======================
# Get from: https://sentry.io/settings/projects/
# Leave empty to disable Sentry
SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"

# =======================
# RATE LIMITING
# =======================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =======================
# UPLOAD LIMITS
# =======================
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp,image/gif"

# =======================
# SESSION & SECURITY
# =======================
SESSION_SECRET="your-session-secret-minimum-32-characters-long"

# =======================
# FEATURE FLAGS (Optional)
# =======================
ENABLE_SWAGGER=true
ENABLE_AUDIT_LOGGING=true
ENABLE_SOCKET_IO=true
